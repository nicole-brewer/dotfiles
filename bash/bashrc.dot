# source config file
source $HOME/.dotconfig

PATH="$HOME/.local/bin:$PATH"
# add coreutils to path so we don't have to use the
# g prefix on gnu utils on macOS
PATH="/usr/local/opt/coreutils/libexec/gnubin:$PATH"

PS1="$(pwd)>  \!$ "

eval $(dircolors $DOT/dircolors-solarized/dircolors.ansi-universal)

# bash
source $DOT/bash/helpers.sh
source $DOT/bash/aliases.sh

# source local dotfiles in home
if [ -f ~/.bashrc.local ]; then
    source ~/.bashrc.local
fi

# NOTE: if this file sources .bashrc, there will be an infinite loop
if [ -f ~/.bash_profile.local ]; then
    source ~/.bash_profile.local
fi

